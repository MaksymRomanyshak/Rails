<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render 'shared/header' %>

    <% if notice.present? %>
    <p class="notice"><%= notice %></p>
    <%end%>

    <% if alert.present? %>
    <%alertArr = alert.split(',')%>
    <div class="alert">
      <% alertArr.each do |el| %>
      <ul class="element">
        <li> <%= el %> </li>
      </ul>
      <%end%>
    </div>
    <% end %>

    <div class='container'>
    <%= yield %>
    </div>
  </body>
</html>
