<%= form_for movie, html: { class: "movie-form" } do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :duration, class: "form-label" %>
    <%= form.text_field :duration, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :director, class: "form-label" %>
    <%= form.text_field :director, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :year_of_creation, class: "form-label" %>
    <%= form.number_field :year_of_creation, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :genres, class: "form-label" %>
    <%= form.select :genres, Movie::GENRES, multiple: true, class: "form-input" %>
  </div>

  <%= form.submit "Submit", class: "btn" %>
<% end %>
