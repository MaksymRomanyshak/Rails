<% if user_signed_in? %>
  <div class='pull-right'>
    <%= image_tag(current_user.avatar.variant(:tiny), class: 'avatar') if current_user.avatar.attached? %>
    <%= link_to(current_user.full_name, edit_profile_url, class: 'user-link') %>
    <%= link_to 'Log Out' , destroy_user_session_path, class: 'user-link', method: :delete, data: { turbo_method: :delete } %>
  </div>
  <div class="user-links">
    <%= link_to 'Create Movie', new_movie_path, class: 'user-link' %>
    <%= link_to 'Search OMDB', omdb_search_movies_path, class: 'user-link' %>
    <%= link_to 'All Movies', movies_path, class: 'user-link' %>
  </div>
<% else %>
  <%= link_to 'Sign In', new_user_session_path, class: 'user-link' %>
<% end %>
